scrollbarvertical
{
  margin-top: -6dp;
  margin-bottom: -6dp;
  margin-right: -11dp;
  width: 27dp;
}

scrollbarvertical slidertrack
{
    decorator: ninepatch( ScrollBackground-filler, ScrollBackground-filler, 0.0);
}
scrollbarvertical slidertrack:active
{
  image-color: #aaa;
}

scrollbarvertical sliderbar
{
  margin-left: 4dp;
  width: 23dp;
  min-height: 46dp;

  decorator: tiled-box( ScrollKnob-Up-topleft, ScrollKnob-Up-top, ScrollKnob-Up-topright,
                        ScrollKnob-Up-left, ScrollKnob-Up-filler, ScrollKnob-Up-right,
                        ScrollKnob-Up-bottomleft, ScrollKnob-Up-bottom, ScrollKnob-Up-bottomright);
}

scrollbarvertical sliderbar:active
{
  decorator: tiled-box( ScrollKnob-Down-topleft, ScrollKnob-Down-top, ScrollKnob-Down-topright,
                        ScrollKnob-Down-left, ScrollKnob-Down-filler, ScrollKnob-Down-right,
                        ScrollKnob-Down-bottomleft, ScrollKnob-Down-bottom, ScrollKnob-Down-bottomright);
}

scrollbarvertical sliderarrowdec,
scrollbarvertical sliderarrowinc
{
  width: 27dp;
  height: 24dp;
}
scrollbarvertical sliderarrowdec
{
    decorator: image( ScrollBottomArrow-rect ),
               tiled-box(ScrollButton-Up-topleft, ScrollButton-Up-top, ScrollButton-Up-topright,
                         ScrollButton-Up-left, ScrollButton-Up-filler, ScrollButton-Up-right,
                         ScrollButton-Up-bottomleft, ScrollButtonUp-bottom, ScrollButton-Up-bottomright);
}
scrollbarvertical sliderarrowdec:active
{
  decorator: image( ScrollBottomArrow-rect ),
             tiled-box(ScrollButton-Down-topleft, ScrollButton-Down-top, ScrollButton-Down-topright,
                       ScrollButton-Down-left, ScrollButton-Down-filler, ScrollButton-Down-right,
                       ScrollButton-Down-bottomleft, ScrollButtonDown-bottom, ScrollButton-Down-bottomright);
}

scrollbarvertical sliderarrowinc
{
  decorator: image( ScrollTopArrow-rect ),
             tiled-box(ScrollButton-Down-topleft, ScrollButton-Down-top, ScrollButton-Down-topright,
                       ScrollButton-Down-left, ScrollButton-Down-filler, ScrollButton-Down-right,
                       ScrollButton-Down-bottomleft, ScrollButtonDown-bottom, ScrollButton-Down-bottomright);
}
scrollbarvertical sliderarrowinc:active
{
  decorator: image( ScrollTopArrow-rect ),
             tiled-box(ScrollButton-Up-topleft, ScrollButton-Up-top, ScrollButton-Up-topright,
                       ScrollButton-Up-left, ScrollButton-Up-filler, ScrollButton-Up-right,
                       ScrollButton-Up-bottomleft, ScrollButtonUp-bottom, ScrollButton-Up-bottomright);
}

scrollbarhorizontal
{
  width: 0;
  height: 0;
}

textarea scrollbarvertical
{
  cursor: arrow;
  margin: 10dp 0 4dp 0;
  width: 12dp;
}
textarea scrollbarvertical slidertrack
{
  decorator: none;
}
textarea scrollbarvertical sliderbar
{
  margin-left: 2dp;
  width: 10dp;
  min-height: 16dp;
}
textarea scrollbarvertical sliderarrowdec,
textarea scrollbarvertical sliderarrowinc
{
  width: 0;
  height: 0;
}

textarea scrollbarhorizontal
{
  cursor: arrow;
  margin-left: 7dp;
  height: 12dp;
}
textarea scrollbarhorizontal sliderbar
{
  background-color: #BC0000CC;
  height: 8dp;
  min-width: 10dp;
}
textarea scrollbarhorizontal sliderbar:hover
{
  background-color: #B82500CC;
}
textarea scrollbarhorizontal sliderbar:active
{
  background-color: #770000CC;
}
