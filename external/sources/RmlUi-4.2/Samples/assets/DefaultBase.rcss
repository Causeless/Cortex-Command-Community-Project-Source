body
{
  font-family: LatoLatin;
  font-weight: normal;
  font-style: normal;
  font-size: 15dp;
  color: white;
}

body.window
{
  padding-top: 43dp;
  padding-bottom: 20dp;

  min-width: 250dp;
  max-width: 800dp;

  min-height: 135dp;
  max-height: 700dp;
}

div#title_bar
{
  z-index: 1;

  position: absolute;
  top: 3dp;
  left: 0;

  text-align: left;
}

div#title_bar div#icon
{
  position: absolute;
  left: 20dp;
  top: -4dp;

  width: 51dp;
  height: 39dp;
}


div#title_bar span
{
  padding-left: 85dp;
  padding-right: 25dp;
  padding-top: 23dp;
  padding-bottom: 51dp;

  font-size: 20dp;
  font-weight: bold;

  /* font-effect: glow(1dp black); */

  /* decorator: tiled-horizontal( title-bar-l, title-bar-c, title-bar-r ); */
}

div#window
{
  width: auto;
  padding: 10dp 15dp;

  decorator: tiled-box(
    CollectionBox-Panel-topleft, CollectionBox-Panel-top, CollectionBox-Panel-topright,
    CollectionBox-Panel-left, CollectionBox-Panel-filler, CollectionBox-Panel-right,
    CollectionBox-Panel-bl, CollectionBox-Panel-bottom, CollectionBox-Panel-bottomright
  );
}

div#content
{
  z-index: 2;

  width: auto;
  height: 100%;

  overflow: hidden auto;

  text-align: center;
}

p
{
  text-align: left;
  margin-bottom: 1em;
}

h1
{
  margin-left: 0.4em;
  margin-bottom: 0.4em;

  text-align: left;
  font-size: 16dp;
  font-weight: bold;

  /* font-effect: glow(1dp 1dp 1dp 1dp #1117); */
}

input,
select,
dataselect
{
  margin-left: 20dp;
}

input.submit
{
  margin-left: 0;
}

button,
input.submit
{
  display: inline-block;

  width: 159dp;
  height: 33dp;

  padding-top: 12dp;
  vertical-align: -18dp;

  font-size: 16dp;
  text-align: center;
  tab-index: auto;

  decorator: tiled-box(Button-Up-topleft, Button-Up-top, Button-Up-topright,
                       Button-Up-left, Button-Up-filler, Button-Up-right,
                       Button-Up-bottomleft, Button-Up-bottom, Button-Up-bottomright);
}

button:focus,
input.submit:focus
{
  font-effect: blur(3dp #fff);
}

button:hover,
input.submit:hover
{
  decorator: tiled-box(Button-Over-topleft, Button-Over-top, Button-Over-topright,
                       Button-Over-left, Button-Over-filler, Button-Over-right,
                       Button-Over-bottomleft, Button-Over-bottom, Button-Over-bottomright);
}

button:active,
input.submit:active
{
  decorator: tiled-box(Button-Down-topleft, Button-Down-top, Button-Down-topright,
                       Button-Down-left, Button-Down-filler, Button-Down-right,
                       Button-Down-bottomleft, Button-Down-bottom, Button-Down-bottomright);
}

/**
input.submit:disabled
{
  decorator: image(button);
  image-color: rgba(50, 150, 150, 120);
  cursor: unavailable;
}
*/

input.text, input.password
{
  box-sizing: border-box;
  height: 31dp;
  padding: 11dp 10dp 0;
  decorator: tiled-box(TextBox-topleft, TextBox-top, TextBox-topright,
                       TextBox-left, TextBox-filler, TextBox-right,
                       TextBox-bottomleft, TextBox-bottom, TextBox-bottomright);
  cursor: text;
}

textarea
{
  padding: 14dp 12dp 10dp;
  decorator: ninepatch( TextBox-filler, TextBox-filler, 1.0 );
  cursor: text;
}

input.text,
input.password,
select,
dataselect,
textarea
{
  color: #333;
  font-size: 13dp;
}

datagrid input.text, table input.text
{
  box-sizing: border-box;
  width: 100%;
  height: 18dp;
  margin: 0;
  padding: 0 5dp;
  line-height: 1.0;

  border-width: 1dp;
 /* border-color: black;*/
  background-color: white;
  font-size: 15dp;

  decorator: none;
}



select,
dataselect
{
  width: 175dp;
  height: 37dp;
}

select selectvalue,
dataselect selectvalue
{
  width: auto;
  margin-right: 30dp;

  height: 25dp;
  padding: 12dp 10dp 0dp 10dp;

  decorator: tiled-box(TextBox-topleft, TextBox-top, TextBox-topright,
                       TextBox-left, TextBox-filler, TextBox-right,
                       TextBox-bottomleft, TextBox-bottom, TextBox-bottomright);
}

select selectarrow,
dataselect selectarrow
{
  width: 30dp;
  height: 37dp;

  decorator: image(ComboBox-Arrow-rect),
             tiled-box(ComboBox-ButtonUp-topleft, ComboBox-ButtonUp-top, ComboBox-ButtonUp-topright,
                       ComboBox-ButtonUp-left, ComboBox-ButtonUp-filler, ComboBox-Button-right,
                       ComboBox-ButtonUp-bottomleft, ComboBox-ButtonUp-bottom, ComboBox-Button-bottomright);
}

/**
select:hover selectarrow,
dataselect:hover selectarrow
{
  decorator: image( selectarrow-hover );
}
*/

select:active selectarrow,
select selectarrow:checked,
dataselect:active selectarrow,
dataselect selectarrow:checked
{
  decorator: image(ComboBox-Arrow-rect),
             tiled-box(ComboBox-ButtonDown-topleft, ComboBox-ButtonDown-top, ComboBox-ButtonDown-topright,
                       ComboBox-ButtonDown-left, ComboBox-ButtonDown-filler, ComboBox-Button-right,
                       ComboBox-ButtonDown-bottomleft, ComboBox-ButtonDown-bottom, ComboBox-Button-bottomright);
}

select selectbox,
dataselect selectbox
{
  margin-left: 1dp;
  margin-top: -7dp;
  margin-bottom: -10dp;
  width: 162dp;
  padding: 1dp 4dp 4dp 4dp;
}

select selectbox,
dataselect selectbox,
datagrid datagridbody,
tbody
{
    decorator: tiled-box(TextBox-topleft, TextBox-top, TextBox-topright,
                         TextBox-left, TextBox-filler, TextBox-right,
                         TextBox-bottomleft, TextBox-bottom, TextBox-bottomright);
}

select selectbox option,
dataselect selectbox option
{
  width: auto;
  padding: 3dp 0 3dp 6dp;
  background: #DDDD;
}

select selectbox option:nth-child(even),
dataselect selectbox option:nth-child(even),
datagrid datagridrow:nth-child(even),
tr:nth-child(even)
{
  background: #FFFFFFA0;
}
select selectbox option:checked,
dataselect selectbox option:checked
{
  font-weight: bold;
}
select selectbox option:hover,
dataselect selectbox option:hover
{
  background: #FF5D5D;
}



input.radio,
input.checkbox
{
  width: 30dp;
  height: 30dp;

  vertical-align: -11dp;
}

input.radio
{
  decorator: image(RadioButton-base);
}

input.radio:hover
{
  decorator: image(RadioButton-mouseover);
}

input.radio:active
{
  decorator: image(RadioButton-greycheck), image(RadioButton-mouseover);
}
input.radio:disabled
{
    decorator: image(RadioButton-greycheck), image(RadioButton-base);
}

input.radio:checked
{
  decorator: image(RadioButton-check), image(RadioButton-base);
}

input.radio:checked:hover
{
  decorator: image(RadioButton-check), image(RadioButton-mouseover);
}

input.radio:checked:active
{
  decorator: image(RadioButton-check), image(RadioButton-greycheck), image(RadioButton-mouseover);
}

input.checkbox
{
  decorator: image(Checkbox-base);
}

input.checkbox:hover
{
  decorator: image(Checkbox-mouseover);
}

input.checkbox:active
{
  decorator: image(Checkbox-greycheck). image(Checkbox-mouseover);
}

input.checkbox:checked
{
  decorator: image(Checkbox-check), image(Checkbox-base);
}

input.checkbox:checked:hover
{
  decorator: image(Checkbox-check), image(Checkbox-mouseover);
}

input.checkbox:checked:active
{
  decorator: image(Checkbox-check), image(Checkbox-greycheck), image(Checkbox-mouseover);
}

input.checkbox:disabled
{
    decorator: image(Checkbox-greycheck), image(Checkbox-base);
}

input.range {
  width: 200dp;
  height: 32dp;
  vertical-align: -12dp;
}
input.range slidertrack {
  margin-top: 3dp;
  height: 22dp;
  image-color: #ecc;
  decorator: tiled-horizontal( Slider-Horz-start, Slider-Horz-middle, Slider-Horz-end );
}
input.range sliderbar {
  margin-left: -8dp;
  margin-right: -7dp;
  margin-top: -3dp;
  width: 34dp;
  height: 23dp;
  decorator: image( Slider-Horz-bottomrightslider );
}
input.range:hover sliderbar {
  image-color: #cc0;
}
input.range sliderbar:active {
  image-color: #c80;
}
input.range sliderarrowdec, input.range sliderarrowinc {
  width: 0dp;
  height: 0dp;
  /* margin-top: 6dp; */
}
